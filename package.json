{
  "name": "test-data-generator",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "description": "A simple web app for generating test data.",
  "main": "index.js",
  "scripts": {
    "start": "vite",
    "clean": "rimraf dist playwright-report test-results",
    "format": "prettier --write \"./**/*.{css,html,js,json,md,prettierrc,yaml,yml}\"",
    "lint": "oxlint --fix --deny-warnings",
    "build": "vite build",
    "build-cloudflare-pages": "vite build --base=/",
    "preview": "vite preview",
    "test": "vitest run",
    "e2e": "playwright test",
    "e2e-ui": "playwright test --ui",
    "e2e-update-snapshots": "playwright test --update-snapshots",
    "all-checks": "npm run clean && npm run format && npm run lint && npm run build && npm run test && npm run e2e",
    "prepare": "husky"
  },
  "keywords": [
    "test data",
    "generator"
  ],
  "author": "luth1um",
  "license": "MIT",
  "dependencies": {
    "@paralleldrive/cuid2": "3.3.0",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@playwright/test": "1.58.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "oxlint": "1.43.0",
    "prettier": "3.8.1",
    "rimraf": "6.1.2",
    "vite": "7.3.1",
    "vitest": "4.0.18"
  },
  "lint-staged": {
    "*.{css,html,js,json,md,prettierrc,yaml,yml}": "prettier --write"
  }
}
